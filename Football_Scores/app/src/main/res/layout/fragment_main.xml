<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/list_horizonal_matgin"
    android:layout_marginRight="@dimen/list_horizonal_matgin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="start"
    tools:context=".MainActivity$PlaceholderFragment">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/tab_score_listview"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        />
    <TextView
        android:id="@+id/tab_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:text="@string/no_matches_available"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:paddingTop="36dp" />
</FrameLayout>
